<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Patient Registration Web Application</display-name>

  <servlet>
    <servlet-name>UserRegistrationServlet</servlet-name>
    <servlet-class>com.taxibooking.servlets.UserRegistrationServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UserRegistrationServlet</servlet-name>
    <url-pattern>/UserRegistrationServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DriverRegistrationServlet</servlet-name>
    <servlet-class>com.taxibooking.servlets.DriverRegistrationServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>DriverRegistrationServlet</servlet-name>
    <url-pattern>/DriverRegistrationServlet</url-pattern>
  </servlet-mapping>



  <servlet>
    <servlet-name>DriverLoginServlet</servlet-name>
    <servlet-class>com.taxibooking.servlets.DriverLoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>DriverLoginServlet</servlet-name>
    <url-pattern>/DriverLoginServlet</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>